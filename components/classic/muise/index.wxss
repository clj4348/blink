.classic-img {
  width: 422rpx;
  height: 422rpx;
  margin-top: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.player-img {
  width: 120rpx;
  height: 120rpx;
  position: relative; 
  bottom: 271rpx; 
}
@keyframes rotation {
  from {
		transform: rotate(0deg);
  }

  to {
		transform: rotate(360deg);
  }
}
@-webkit-keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(360deg);
  }
}

.tag{
  width:44rpx;
